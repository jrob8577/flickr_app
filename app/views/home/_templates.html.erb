<script id="item-template" type="text/x-handlebars-template">
  <div class="small-2 columns">
    <a class="item th radius" data-id="{{id}}">
      <img src="https://farm{{farm}}.staticflickr.com/{{server}}/{{id}}_{{secret}}_t.jpg" />
    </a>
  </div>
</script>

<script id="paging-template" type="text/x-handlebars-template">
  <div class="paging-message">
    <div class="message">
      <%= image_tag 'ajax-loader.gif' %> Loading Page {{page}}...
    </div>
  </div>
</script>

<script id="photo-template" type="text/x-handlebars-template">
  <div class="row">
    <a href="#" id="close" class="button tiny round right">Close</a>
  </div>
  <div class="row">
    <div class="small-4 columns">
      <img src="https://farm{{farm}}.staticflickr.com/{{server}}/{{id}}_{{secret}}.jpg" class="left th" />
    </div>
    <div class="small-8 columns">
      <dl>
        <dt>Title</dt>
        <dd>{{{title._content}}}</dd>

        <dt>Taken</dt>
        <dd>{{dates.taken}}</dd>

        <dt>Views</dt>
        <dd>{{views}}</dd>

        <dt>Description</dt>
        <dd>{{{description._content}}}

        <dt>Tags</dt>
        <dd>
          {{#each tags.tag}}
            {{this._content}}
          {{/each}}
        </dd>
      </dl>
    </div>
  </div>
</script>